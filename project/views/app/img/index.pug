extends ../../layout.pug
block contenido
    h1 Mis imagenes   
    div(class="container")      
        for image in img_collection
            .white.border.tr.large-padding
                .row
                    .col-md-10
                        h2=image.title
                    .col-md-2
                        a(href="/app/img/#image._id/edit",class="right-space") Editar
                        ID #{image._id}
                        form(action="/app/img/#{image._id}?_method=DELETE" class="link", method="POST")
                            input(type="submit", value="Eliminar")